generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  learningProgress LearningProgress[]
  workspaceItems  WorkspaceItem[]
  reports         Report[]
  chatMessages    ChatMessage[]
  chatMembers     ChatMember[]
  stories         Story[]
  leisure         Leisure[]
  conferences     Conference[]
  conferenceParticipants ConferenceParticipant[]
  conferenceMessages      ConferenceMessage[]
}

model LearningCategory {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  color       String?  // Hex цвет для визуализации
  image       String?  // URL изображения категории
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  contents    LearningContent[]
}

model LearningContent {
  id          String   @id @default(uuid())
  title       String
  description String?
  type        String   // 'text', 'audio', 'video'
  content     String
  images      String[]
  audioUrl    String?
  videoUrl    String?
  categoryId  String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  category    LearningCategory? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  progress    LearningProgress[]
  
  @@index([categoryId])
}

model LearningProgress {
  id        String   @id @default(uuid())
  userId    String
  contentId String
  completed Boolean  @default(false)
  progress  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user    User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  content LearningContent @relation(fields: [contentId], references: [id], onDelete: Cascade)
  
  @@unique([userId, contentId])
}

model WorkspaceItem {
  id          String   @id @default(uuid())
  userId      String
  type        String
  title       String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

model Report {
  id          String   @id @default(uuid())
  userId      String
  title       String?
  content     String
  isPublic    Boolean  @default(false)
  images      String[]
  videos      String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isPublic])
  @@index([createdAt])
}

model ReportForm {
  id        String   @id @default(uuid())
  userId    String
  name      String
  fields    String
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId])
}

model Chat {
  id        String   @id @default(uuid())
  name      String?
  type      String   @default("private")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  members ChatMember[]
  messages ChatMessage[]
}

model ChatMember {
  id        String   @id @default(uuid())
  chatId    String
  userId    String
  role      String   @default("member")
  joinedAt DateTime @default(now())
  
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([chatId, userId])
  @@index([userId])
}

model ChatMessage {
  id        String   @id @default(uuid())
  chatId    String
  userId    String
  content   String?
  type      String   @default("text")
  mediaUrl  String?
  createdAt DateTime @default(now())
  
  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([chatId, createdAt])
}

model Story {
  id        String   @id @default(uuid())
  userId    String
  content   String
  type      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, expiresAt])
}

model Conference {
  id          String   @id @default(uuid())
  chatId      String?
  createdBy   String
  title       String?
  link        String   @unique
  isActive    Boolean  @default(true)
  startedAt   DateTime @default(now())
  endedAt     DateTime?
  createdAt   DateTime @default(now())
  
  user        User            @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  participants ConferenceParticipant[]
  messages    ConferenceMessage[]
  summary     ConferenceSummary?
  
  @@index([link])
  @@index([chatId])
}

model ConferenceParticipant {
  id           String   @id @default(uuid())
  conferenceId String
  userId       String
  joinedAt     DateTime @default(now())
  leftAt       DateTime?
  isMuted      Boolean  @default(false)
  isVideoOff   Boolean  @default(false)
  
  conference Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([conferenceId, userId])
  @@index([conferenceId])
}

model ConferenceMessage {
  id           String   @id @default(uuid())
  conferenceId String
  userId       String
  content      String
  type         String   @default("text") // 'text', 'reaction', 'system'
  createdAt    DateTime @default(now())
  
  conference Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([conferenceId, createdAt])
}

model ConferenceSummary {
  id           String   @id @default(uuid())
  conferenceId String   @unique
  autoSummary  String?  // Автоматическое резюме от бота
  manualSummary String? // Ручное резюме
  date         DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  conference Conference @relation(fields: [conferenceId], references: [id], onDelete: Cascade)
}

model Leisure {
  id          String   @id @default(uuid())
  userId      String
  title       String
  description String?
  url         String
  type        String   @default("video") // 'video', 'article', 'podcast', 'movie', 'other'
  thumbnail   String?
  tags        String[]
  isPublic    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isPublic])
  @@index([createdAt])
  @@index([type])
}
